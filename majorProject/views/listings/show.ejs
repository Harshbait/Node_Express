<% layout('/layouts/boilerplate') %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>Listing Details</h3>
            </div>

            <div class="card col-6 offset-3 show-card">
                <img src="<%= list.image %>" class="card-img-top show-image" alt="Listing_image">
                <div class="card-body">
                    <p class="card-text"> <b>
                            <%= list.title %> <br>
                        </b>
                        <%= list.description %> <br>
                            &#8377; <%= list.price.toLocaleString('en-IN') %><br>
                                <%= list.location %> <br>
                                    <%= list.country %>
                    </p>
                </div>
            </div>

            <div class="btns">
                <a class="btn btn-dark mb-2 new-btn col-1 offset-3" href="/listings/<%= list._id %>/edit">Edit</a>

                <form method="post" action="/listings/<%= list._id %>?_method=DELETE">
                    <button class="btn btn-dark mb-2  offset-5">Delete</button>
                </form>

            </div>
        </div>
    </body>

    </html>