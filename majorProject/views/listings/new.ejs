<% layout('/layouts/boilerplate') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Creating a Listining</h3>
                <form method="post" action="/listings/">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listings[title]" class="form-control" placeholder="Enter a Catchy Title">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" name="listings[description]" class="form-control"
                            placeholder="Enter description"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-lable">Image Link</label>
                        <input type="text" name="listings[image]" class="form-control" placeholder="Enter URL">
                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="number" name="listings[price]" class="form-control" placeholder="1200">
                        </div>
    
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" class="form-control" name="listings[country]" placeholder="India">
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listings[location]" class="form-control" placeholder="Mumbai, Maharashtra ">
                    </div>

                    <button class="btn btn-dark mb-2 new-btn">Add</button>
                </form>
            </div>
        </div>
    </body>